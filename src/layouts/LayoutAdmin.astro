---
import '@fontsource-variable/onest'
import Sidebar from '../components/Sidebar.astro'
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/routico-isotipo.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Routico</title>
  </head>
  <body
    class='overflow-hidden grid grid-cols-[1fr] sm:grid-cols-[auto_1fr] md:grid-cols-[210px_1fr] grid-rows-[52px_1fr]'
  >
    <Header />
    <Sidebar />

    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Onest Variable', sans-serif;
  }
</style>
