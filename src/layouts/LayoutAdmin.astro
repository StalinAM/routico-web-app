---
import '@fontsource-variable/onest'
import Logo from '../components/Logo.astro'
import Sidebar from '../components/Sidebar.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/routico-isotipo.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Routico</title>
  </head>
  <body
    class='grid grid-cols-[1fr] sm:grid-cols-[auto_1fr] md:grid-cols-[210px_1fr] grid-rows-[52px_1fr]'
  >
    <header
      class='flex items-center justify-between py-3 px-6 [&_svg]:w-8 row-start-1 col-start-1 col-end-4 border-b border-azur-300'
    >
      <Logo
        class='flex gap-1 items-center text-xl font-bold justify-center text-azur-800'
      />
      <button>Admin</button>
    </header>
    <Sidebar />

    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Onest Variable', sans-serif;
  }
</style>
