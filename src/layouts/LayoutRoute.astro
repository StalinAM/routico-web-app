---
import '@fontsource-variable/onest'
import HeaderRoute from '../components/HeaderRoute.astro'
import '../style/globals.css'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/routico-isotipo.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Routico</title>
  </head>
  <body class='grid grid-rows-[52px_1fr] grid-cols-1'>
    <HeaderRoute />
    <main class='p-4 md:p-6 flex flex-col gap-y-4'>
      <slot />
    </main>
  </body>
</html>
<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Onest Variable', sans-serif;
  }
</style>
