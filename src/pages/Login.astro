---
import Layout from '../layouts/Layout.astro'
import Logo from '../components/Logo.astro'
---

<Layout title='Crear una cuenta'>
  <main class='p-3 flex justify-center items-center flex-col gap-y-2 h-dvh'>
    <div class='pb-6'>
      <Logo
        class='flex gap-2 items-center text-4xl font-bold justify-center text-azur-800 uppercase'
      />
    </div>
    <h2 class='text-4xl font-bold'>Iniciar Sesión</h2>
    <p class='text-azur-600 font-semibold'>
      Cambia el rumbo de tus entregas con un clic.
    </p>
    <section>
      <form class='flex gap-3 flex-col min-w-80'>
        <label for='user'></label>
        <input
          class='border-2 border-gray-200 rounded py-1 px-2'
          type='text'
          id='user'
          name='user'
          placeholder='Usuario'
          required
        />
        <label for='password'></label>
        <input
          class='border-2 border-gray-200 rounded py-1 px-2'
          type='password'
          id='password'
          name='password'
          placeholder='Contraseña'
          required
        />
        <a href='/register' class='ml-auto text-sm text-azur-600'
          >¿Olvidaste tu contraseña?</a
        >
        <button
          class='py-2 px-4 bg-azur-600 rounded-xl text-azur-50 font-semibold'
          type='submit'>Continuar</button
        >
      </form>
    </section>
  </main>
</Layout>
