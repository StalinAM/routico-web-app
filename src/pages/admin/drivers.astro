---
import LayoutAdmin from '../../layouts/LayoutAdmin.astro'
---

<LayoutAdmin>
  <main>
    <h2 class='py-4 px-4 text-xl font-medium'>Lista de conductores</h2>

    <section class='flex flex-col gap-y-4'>
      <div class='px-3 flex justify-between items-center'>
        <label for='search' class='text-sm text-gray-500'>
          <input
            type='text'
            id='search'
            name='search'
            class='border-2 border-gray-200 rounded-xl py-2 px-4'
            placeholder='Buscar por nombre'
          />
        </label>
        <button
          class='flex items-center gap-x-1 bg-azur-600 text-azur-50/80 border rounded-xl py-2 px-4 hover:bg-azur-800 hover:text-azur-50'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
              d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0'></path><path d='M16 19h6'
            ></path><path d='M19 16v6'></path><path
              d='M6 21v-2a4 4 0 0 1 4 -4h4'></path></svg
          >
          Agregar
        </button>
      </div>

      <table class='w-full'>
        <thead class='border-b'>
          <tr
            class='grid grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] text-left text-sm [&_th]:font-medium text-gray-600 border-b py-3 px-4'
          >
            <th>Nombre</th>
            <th>Correo</th>
            <th>Contraseña</th>
            <th>Teléfono</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody class='grid p-3'>
          <tr
            class='grid p-1 items-center grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] border-b border-gray-200'
          >
            <td>Carlos Guaman</td>
            <td>carlos@gmail.com</td>
            <td>*********</td>
            <td>0978657839</td>
            <td
              ><button
                class='w-full py-1 text-azur-50/90 bg-azur-600 rounded-xl hover:text-azur-600 hover:bg-azur-400'
                >Activo</button
              ></td
            >
          </tr>
          <tr
            class='grid p-1 items-center grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] border-b border-gray-200'
          >
            <td>Carlos</td>
            <td>carlos@gmail.com</td>
            <td>*********</td>
            <td>1234567890</td>
            <td
              ><button
                class='w-full py-1 text-azur-600 bg-azur-400 rounded-xl hover:text-azur-50/90 hover:bg-azur-600'
                >Inactivo</button
              ></td
            >
          </tr>
        </tbody>
      </table>
    </section>
  </main>
</LayoutAdmin>
