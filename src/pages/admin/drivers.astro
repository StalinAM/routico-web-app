---
import AddDriver from '../../components/AddDriver.astro'
import Search from '../../components/icons/Search.astro'
import UserAdd from '../../components/icons/UserAdd.astro'
import LayoutAdmin from '../../layouts/LayoutAdmin.astro'
---

<LayoutAdmin>
  <main class='relative bg-azur-200/20 p-6 flex flex-col gap-6'>
    <h2 class='text-xl font-medium'>Lista de conductores</h2>

    <section class='flex justify-between items-center'>
      <label for='search' class='relative text-sm text-gray-500'>
        <div
          class='absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none'
        >
          <Search class='w-4' />
        </div>
        <input
          type='text'
          id='search'
          name='search'
          class='border bg-azur-50 border-gray-200 rounded-xl py-2 pl-8 pr-4'
          placeholder='Buscar por nombre'
        />
      </label>
      <button
        class='flex items-center gap-x-1 bg-azur-600 text-azur-50/80 border rounded-xl py-2 px-4 hover:bg-azur-800 hover:text-azur-50'
      >
        <UserAdd />
        Agregar
      </button>
    </section>

    <section class='flex flex-col gap-y-4 bg-azur-50 rounded-xl border h-full'>
      <table class='w-full'>
        <thead>
          <tr
            class='grid grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] text-left text-sm [&_th]:font-medium text-gray-600 border-b py-3 px-4'
          >
            <th>Nombre</th>
            <th>Correo</th>
            <th>Contraseña</th>
            <th>Teléfono</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody class='grid p-3'>
          <tr
            class='grid p-1 items-center grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] border-b border-gray-200'
          >
            <td>Carlos Guaman</td>
            <td>carlos@gmail.com</td>
            <td>*********</td>
            <td>0978657839</td>
            <td
              ><button
                class='w-full py-1 text-azur-50/90 bg-azur-600 rounded-xl hover:text-azur-600 hover:bg-azur-400'
                >Activo</button
              ></td
            >
          </tr>
          <tr
            class='grid p-1 items-center grid-cols-[1fr_1fr_110px_110px_110px] lg:grid-cols-[1fr_1fr_1fr_1fr_110px] border-b border-gray-200'
          >
            <td>Carlos</td>
            <td>carlos@gmail.com</td>
            <td>*********</td>
            <td>1234567890</td>
            <td
              ><button
                class='w-full py-1 text-azur-600 bg-azur-400 rounded-xl hover:text-azur-50/90 hover:bg-azur-600'
                >Inactivo</button
              ></td
            >
          </tr>
        </tbody>
      </table>
    </section>
    <!-- <AddDriver /> -->
  </main>
</LayoutAdmin>
