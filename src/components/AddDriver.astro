---
import UserAdd from './icons/UserAdd.astro'
---

<div
  class='fixed flex justify-center items-center top-0 left-0 w-full bg-slate-400/40 h-full'
>
  <div class='bg-azur-50 rounded-xl w-full max-w-md flex flex-col gap-y-4'>
    <h3 class='flex gap-x-2 font-semibold text-lg border-b-2 p-4'>
      Nuevo conductor
    </h3>
    <form id='addDriverForm' class='w-full flex flex-col gap-y-4'>
      <div class='grid grid-cols-2 gap-4 px-4'>
        <div>
          <label
            for='driverName'
            class='block text-sm font-medium text-gray-700'
          >
            <input
              type='text'
              id='driverName'
              class='block w-full border-2 border-gray-200 rounded-xl py-2 px-4'
              placeholder='Nombre'
              required
            />
          </label>
        </div>
        <div>
          <label for='driverName' class='text-sm font-medium text-gray-700'>
            <input
              type='text'
              id='driverName'
              class='block w-full border-2 border-gray-200 rounded-xl py-2 px-4'
              placeholder='Apellido'
              required
            />
          </label>
        </div>
      </div>
      <label for='driverName' class='text-sm font-medium text-gray-700 px-4'>
        <input
          type='text'
          id='driverName'
          class='block w-full border-2 border-gray-200 rounded-xl py-2 px-4'
          placeholder='Correo'
          required
        />
      </label>
      <label for='driverName' class='text-sm font-medium text-gray-700 px-4'>
        <input
          type='text'
          id='driverName'
          class='block w-full border-2 border-gray-200 rounded-xl py-2 px-4'
          placeholder='Telefono'
          required
        />
      </label>
      <!-- Botones -->
      <div class='flex justify-between border-t-2 p-4'>
        <button
          type='button'
          id='closeModalBtn'
          class='px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300'
        >
          Cancelar
        </button>
        <button
          type='submit'
          class='px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700'
        >
          Guardar
        </button>
      </div>
    </form>
  </div>
</div>
