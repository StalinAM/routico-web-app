---
import Close from './icons/Close.astro'
import UserAdd from './icons/UserAdd.astro'
---

<div
  class='fixed flex justify-center items-center top-0 left-0 w-full bg-slate-400/40 h-full'
>
  <div class='bg-azur-50 rounded-xl w-full max-w-sm flex flex-col gap-y-4'>
    <div class='border-b p-6 flex justify-between items-center'>
      <h3 class='text-center font-semibold text-xl'>Nuevo conductor</h3>
      <button
        class='cursor-pointer hover:bg-azur-800 rounded-md p-1 hover:text-azur-50'
      >
        <Close />
      </button>
    </div>
    <form id='addDriverForm' class='w-full flex flex-col gap-y-4'>
      <div class='grid grid-cols-2 gap-4 px-6'>
        <div>
          <label for='driverName' class='block text-gray-700'>
            Nombre
            <input
              type='text'
              id='driverName'
              class='block w-full border border-gray-200 rounded-xl py-2 px-4'
              required
            />
          </label>
        </div>
        <div>
          <label for='driverName' class='text-gray-700'>
            Apellido
            <input
              type='text'
              id='driverName'
              class='block w-full border border-gray-200 rounded-xl py-2 px-4'
              required
            />
          </label>
        </div>
      </div>
      <label for='driverName' class='text-gray-700 px-6'>
        Correo electrónico
        <input
          type='email'
          id='driverName'
          class='block w-full border border-gray-200 rounded-xl py-2 px-4 placeholder:font-extralight'
          placeholder='nombre@ejemplo.com'
          required
        />
      </label>
      <label for='driverName' class='text-gray-700 px-6'>
        Teléfono
        <input
          type='text'
          id='driverName'
          class='block w-full border border-gray-200 rounded-xl py-2 px-4 placeholder:font-extralight'
          placeholder='xx-xxxxxxxx'
          required
        />
      </label>
      <!-- Botones -->
      <div class='border-t p-6'>
        <button
          type='submit'
          class='w-full bg-azur-600 text-azur-50/90 border-2 border-azur-600 rounded-xl py-2 px-4 hover:bg-azur-800 hover:text-azur-50'
        >
          Agregar conductor
        </button>
      </div>
    </form>
  </div>
</div>
